{% extends 'base.html.twig' %}

{% block body %}


<table class="table table-hover table-striped" border="1">


<thead>
    <tr>
        <th>ID</th>
        <th>Type</th>
        <th>Company</th>
        <th>Description</th>
        <th>Actions</th>
        <th> Image </th>
    </tr>
    </thead>
    <tbody>
    {% for job in lesJob %}
        <tr>
            <td>{{ job.id }}</td>
            <td>{{ job.type }}</td>
            <td>{{ job.company }}</td>
            <td>{{ job.description }}</td>
            <td>
            <td>
                <a class="btn btn-primary" href="{{ path('job_show', {id: job.id}) }}">Voir</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="5">No jobs found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
